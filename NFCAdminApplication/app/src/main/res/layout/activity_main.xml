<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context="com.example.owner.nfcadminapplication.MainActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_login_n"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            />


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="40dp"
            android:text="Login to Get Started"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Just scan your tag to get started"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_marginBottom="30dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/Username"
            android:drawableLeft="@drawable/ic_user_icon"
            android:layout_marginRight="40dp"
            android:padding="1dp"
            android:background="@drawable/rounded_white"
            android:hint="Enter Username"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/password"
            android:drawableLeft="@drawable/ic_pass_icon"
android:inputType="textPassword"
            android:layout_marginRight="40dp"
            android:padding="1dp"
            android:background="@drawable/rounded_white"
            android:hint="Enter Password"/>

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember Me on this device"
            android:textColor="#fc6e6b6b"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"

            android:paddingLeft="5dp"
            android:textSize="15sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/login"
            android:layout_marginRight="40dp"
            android:padding="15dp"
            android:background="@drawable/rounded_white"
            android:text="login"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/forget_pass"
            android:layout_marginRight="40dp"
            android:padding="15dp"
            android:background="#f26c78"
            android:text="forget password"/>












    </LinearLayout>



</ScrollView>

</LinearLayout>
