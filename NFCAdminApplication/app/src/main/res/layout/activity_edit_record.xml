<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/all_background"
    tools:context="com.example.owner.nfcadminapplication.EditRecord">
    <Button
        android:id="@+id/btn_readE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click to scan NFC Tag"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="118dp" />

    <Button
        android:id="@+id/buttonE"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="87dp"
        android:text="Continue"
        android:layout_alignBottom="@+id/btn_readE"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/idE"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter id to edit "
        android:background="@drawable/rounded_white"
        android:layout_above="@+id/buttonE"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
