<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/all_background"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:src="@drawable/user_icon"/>
            <EditText
                android:id="@+id/userIdO"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:inputType="number"
                android:background="@drawable/rounded_white"
                android:drawableLeft="@drawable/ic_user_icon"
                android:hint=" Unique Id"
                android:padding="1dp" />

            <EditText
                android:id="@+id/userNameO"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_white"
                android:drawableLeft="@android:drawable/ic_menu_myplaces"
                android:hint=" Name"
                android:padding="1dp" />

            <EditText
                android:id="@+id/userContactO"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_white"
                android:drawableLeft="@android:drawable/ic_menu_call"
                android:hint=" Contact No"
                android:inputType="phone"
                android:padding="1dp" />

            <EditText
                android:id="@+id/userAddressO"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_white"
                android:drawableLeft="@android:drawable/ic_menu_my_calendar"
                android:hint=" Address"
                android:padding="1dp" />

            <EditText
                android:id="@+id/userEmailO"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_white"
                android:drawableLeft="@android:drawable/sym_action_email"
                android:hint=" Email Id"
                android:inputType="textEmailAddress"
                android:padding="1dp" />



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="70dp"
                android:id="@+id/addUserO"
                android:textSize="27dp"
                android:layout_marginRight="70dp"
                android:padding="15dp"
                android:background="@null"
                android:text="CLOSE"/>

        </LinearLayout>


    </ScrollView>

</LinearLayout>
